---
interface Props {
	subtitle?: string;
}

const { subtitle = "STEM PROJECT" } = Astro.props;
---

<div class="hero-section">
	<h1 class="hero-title">BOTROS</h1>
	<p class="hero-description">
		Hello! I'm Botros, navigating the challenges of a STEM high school. 
		This site is a collection of my projects, experiments, and the things I'm learning along the way.
	</p>
	<div class="hero-buttons">
		<a href="#projects" class="btn btn-primary">
			<span>PROJECTS</span>
			<span class="btn-icon">â†“</span>
		</a>
	</div>
</div>

<style>
	.hero-section {
		text-align: center;
		padding: 100px 0 120px;
		border-bottom: 1px solid #e5e5e5;
		margin-bottom: 0;
	}

	.hero-title {
		font-size: 4.5rem;
		font-weight: 300;
		letter-spacing: 0.3em;
		color: #222;
		margin: 0 0 30px 0;
		text-transform: uppercase;
		font-family: 'Outfit', sans-serif;
	}

	.hero-description {
		font-size: 1.1rem;
		color: #666;
		max-width: 550px;
		margin: 0 auto 45px;
		line-height: 1.8;
		letter-spacing: 0.02em;
	}

	.hero-buttons {
		display: flex;
		justify-content: center;
		gap: 15px;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 12px;
		padding: 16px 40px;
		font-size: 0.95rem;
		font-weight: 500;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		text-decoration: none;
		border-radius: 50px;
		transition: all 0.3s ease;
		font-family: 'Outfit', sans-serif;
	}

	.btn-primary {
		background: #1a1a1a;
		color: #fff;
		border: 2px solid #1a1a1a;
	}

	.btn-primary:hover {
		background: #333;
		border-color: #333;
		color: #fff;
	}

	.btn-icon {
		font-size: 1.1em;
		opacity: 0.8;
	}

	@media (max-width: 768px) {
		.hero-section {
			padding: 60px 0 80px;
		}

		.hero-title {
			font-size: 2.8rem;
			letter-spacing: 0.2em;
		}

		.hero-description {
			font-size: 1rem;
		}

		.hero-buttons {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 100%;
			max-width: 250px;
			justify-content: center;
		}
	}
</style>
