<style>
	.site-footer {
		background: #fff;
		border-top: 1px solid #e5e5e5;
		padding: 60px 20px 40px;
		margin-top: 40px;
	}

	.footer-content {
		max-width: 600px;
		margin: 0 auto;
		text-align: center;
	}

	.footer-logo {
		font-family: 'Outfit', sans-serif;
		font-size: 1.8rem;
		font-weight: 300;
		letter-spacing: 0.3em;
		color: #222;
		margin-bottom: 10px;
	}

	.footer-tagline {
		font-size: 0.9rem;
		color: #888;
		margin: 0 0 30px 0;
		letter-spacing: 0.05em;
	}

	.footer-links {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 20px;
		margin-bottom: 30px;
	}

	.footer-link {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		color: #555;
		text-decoration: none;
		font-size: 0.95rem;
		letter-spacing: 0.05em;
		transition: color 0.3s ease, transform 0.3s ease;
		padding: 8px 16px;
		border-radius: 25px;
		background: #f5f5f5;
	}

	.footer-link:hover {
		color: #222;
		transform: translateY(-2px);
		background: #eee;
	}

	.link-icon {
		font-size: 1.1em;
	}

	.footer-divider {
		color: #ddd;
		font-size: 1.2rem;
	}

	.footer-line {
		width: 60px;
		height: 2px;
		background: linear-gradient(90deg, #40e0d0, #48d1cc);
		margin: 0 auto 25px;
		border-radius: 2px;
	}

	.footer-copyright {
		font-size: 0.85rem;
		color: #aaa;
		margin: 0;
		letter-spacing: 0.03em;
	}

	@media (max-width: 480px) {
		.footer-links {
			flex-direction: column;
			gap: 12px;
		}

		.footer-divider {
			display: none;
		}

		.footer-link {
			width: 100%;
			max-width: 180px;
			justify-content: center;
		}
	}
</style>
